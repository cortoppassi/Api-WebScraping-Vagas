{
    "version": 2,
    "builds": [
      {
        "src": "src/api/server.js", 
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      
      { "src": "/api/(.*)", "dest": "/src/api/$1" },
      { "src": "/(.*)", "dest": "/src/$1" }
    ]
  }
  